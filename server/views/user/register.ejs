<% include ../partials/header.ejs %>
<div class="panel-body">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <% if (messages.length > 0) { %>
        <div class="alert alert-danger"><%= messages %></div>
      <% } %>
      <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-4">
                <div class="jumbotron">
                <h2><center>User Registration</center></h2>
                <hr>
                <form method="post">
                    <fieldset class="form-group">
                        <label for="email">Email: </label>
                        <input name="email" type="email" class="form-control" required autofocus />
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="username">Username: </label>
                        <input name="username" type="text" class="form-control" required />
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="password">Password: </label>
                        <input name="password" type="password" class="form-control" required />
                    </fieldset>
                    <fieldset class="form-group text-right">
                        <center><input type="submit" class="btn btnSign" value="Sign Up"/>
                        <a href="/">
                            <input type="button" class="btn btnCancel" value="Go Back"/>
                        </a></center>
                    </fieldset>
                </form>
            </div>
        </div>
        </div>   
      </div>
  </div>
</div>
<% include ../partials/footer.ejs %> 
