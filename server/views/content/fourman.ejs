<% include ../partials/header.ejs %>

  <div class="panel-body">
    <div class="col-md-2"></div>
    <div class="col-md-8">

      <h4>TOURNAMENT SETUP 4Man </h4>

      <!-- Number of Player box Start -->
        <div class="well carousel-search hidden-phone">
          <div class="btn-group">
            <a class="btn dropdown-toggle btn-select" data-toggle="dropdown" href="#">SELECT NUMBER OF PLAYERS <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="/bracket/fourman">4 MAN TOURNAMENT</a></li>
              <li><a href="/bracket8/eightman">8 MAN TOURNAMENT</a></li>
            </ul>
          </div>
          <!-- Enter 4 Player Start -->
          <form method="post" class="form" id="fourManForm">
            <h4>ENTER PLAYERS</h4>
            <div class="well carousel-search hidden-phone">
              <div class="btn-group">
                <a href="#"></a>ENTER TITLE: <input type="text" class="form-control" name="fourManTitle" placeholder="Title" name="fourManTitle" >
                <a href="#"></a>ENTER PLAYER 1: <input type="text" class="form-control" name="player1" placeholder="player1" name="player1"
                  required>
                <a href="#"></a>ENTER PLAYER 2: <input type="text" class="form-control" name="player2" placeholder="player2" name="player2"
                  required>
                <a href="#"></a>ENTER PLAYER 3: <input type="text" class="form-control" name="player3" placeholder="player3" name="player3"
                  required>
                <a href="#"></a>ENTER PLAYER 4: <input type="text" class="form-control" name="player4" placeholder="player4" name="player4"
                  required>
                </br>
                
                <input type="text" name="id" style= "Visibility: hidden" value= "<%= username %>" readonly>

                <button type="submit" class="btn btn-primary"> Submit </button>
                <a href="/" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>

              </div>
            </div>
          </form>
          <!-- Enter 4 Player End -->

        </div>
      <!-- Number of Player box End -->

      <% include ../partials/footer.ejs %>